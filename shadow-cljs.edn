;; shadow-cljs configuration
{:source-paths
 ["src/dev"
  "src/main"
  "src/test"]

 :dependencies
 [[lilactown/helix "0.1.8"]]

 :dev-http
 {8020 "public"}

 :builds
 {:app
  {:target :browser
   :output-dir "public/js"
   :asset-path "/js"

   :devtools {:reload-strategy :full
              :preloads [starter.browser]}

   :modules
   {:main ; becomes public/js/main.js
    {:init-fn starter.browser/init}}}}}
